<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
        <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
        <property name="connection.url">jdbc:mysql://localhost:3306/bookstore</property>
        <property name="connection.username">kot</property>
        <property name="connection.password">1234</property>

        <mapping class="models.BooksEntity"/>
        <mapping class="models.KategoriaEntity"/>
        <mapping class="models.KsiazkiZamowioneEntity"/>
        <mapping class="models.WydawnictwoEntity"/>
        <mapping class="models.ZamowienieEntity"/>
    </session-factory>
</hibernate-configuration>